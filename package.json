{
  "name": "localcms",
  "version": "0.0.1",
  "description": "The perfect CMS for your static web application",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:admin": "cd ./admin/ && npm start",
    "install:admin": "cd ./admin/ && npm install",
    "test": "jest",
    "test:admin": "cd ./admin/ && npm test",
    "lint": "eslint --ext .js --ext .jsx .",
    "lint:fix": "eslint --fix --ext .js --ext .jsx .",
    "lint:admin": "cd ./admin/ && npm run lint",
    "lint:admin:fix": "cd ./admin/ && npm run lint:fix",
    "build:admin": "cd ./admin/ && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andresmoritan/localcms.git"
  },
  "keywords": [
    "cms",
    "content",
    "managment",
    "static",
    "node"
  ],
  "author": "Andres Moritan <amoritan@me.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/andresmoritan/localcms/issues"
  },
  "homepage": "https://github.com/andresmoritan/localcms#readme",
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-eslint": "^6.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^15.12.2",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "jest": "^26.4.2"
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es6": true
    },
    "extends": [
      "eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "brace-style": "off",
      "no-console": "warn",
      "max-statements-per-line": "off"
    }
  },
  "eslintIgnore": []
}
