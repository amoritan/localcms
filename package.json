{
  "name": "localcms",
  "version": "0.0.1",
  "description": "The perfect CMS for your static web application",
  "main": "index.js",
  "scripts": {
    "setup": "npm install && npm run install:webapp",
    "start": "node index.js",
    "start:webapp": "cd ./packages/webapp/ && npm start",
    "install:webapp": "cd ./packages/webapp/ && npm install",
    "test": "jest",
    "test:webapp": "cd ./packages/webapp/ && npm test",
    "lint": "eslint --ext .js .",
    "lint:fix": "eslint --fix --ext .js .",
    "lint:webapp": "cd ./packages/webapp/ && npm run lint",
    "lint:webapp:fix": "cd ./packages/webapp/ && npm run lint:fix",
    "build:webapp": "cd ./packages/webapp/ && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andresmoritan/localcms.git"
  },
  "keywords": [
    "cms",
    "content",
    "managment",
    "static",
    "node"
  ],
  "author": "Andres Moritan <amoritan@me.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/andresmoritan/localcms/issues"
  },
  "homepage": "https://github.com/andresmoritan/localcms#readme",
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-eslint": "^6.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^15.12.2",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.0",
    "prettier": "2.1.2"
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es6": true
    },
    "extends": [
      "eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "brace-style": "off",
      "no-console": "warn",
      "max-statements-per-line": "off"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
