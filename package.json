{
  "name": "localcms",
  "version": "0.0.1",
  "description": "The perfect CMS for your static web application",
  "main": "index.js",
  "scripts": {
    "setup": "npm install && npm run install:client && npm run build:client",
    "start": "node ./bin/www",
    "start:server": "NODE_ENV=development nodemon ./bin/www --ignore 'content.json'",
    "start:client": "cd ./client/ && npm start",
    "install:client": "cd ./client/ && npm install",
    "build:client": "cd ./client/ && npm run build",
    "test": "jest",
    "test:client": "cd ./client/ && npm test",
    "lint": "eslint --ext .js .",
    "lint:fix": "eslint --fix --ext .js .",
    "lint:client": "cd ./client/ && npm run lint",
    "lint:client:fix": "cd ./client/ && npm run lint:fix",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andresmoritan/localcms.git"
  },
  "keywords": [
    "cms",
    "content",
    "managment",
    "static",
    "node"
  ],
  "author": "Andres Moritan <amoritan@me.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/andresmoritan/localcms/issues"
  },
  "homepage": "https://github.com/andresmoritan/localcms#readme",
  "dependencies": {
    "colors": "^1.4.0",
    "express": "^4.17.1",
    "http-errors": "^1.8.0",
    "http-proxy-middleware": "^1.0.6",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "eslint": "^7.11.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.0",
    "nodemon": "^2.0.5",
    "prettier": "2.1.2"
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es6": true,
      "jest/globals": true
    },
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 12
    },
    "plugins": [
      "jest"
    ],
    "rules": {}
  },
  "eslintIgnore": [
    "client/"
  ],
  "prettier": {
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "npm run prettier:write"
    ],
    "client/*.js": [
      "npm run lint:client:fix"
    ],
    "*.{json,css,md}": "npm run prettier:write"
  },
  "nodemonConfig": {
    "ignore": [
      "client/*"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "client/"
    ]
  }
}
